{{> navbar}}

<div class="container">
    <div class="row">
        <h1>Momenteel geopend</h1>
    {{#each entities}}
        <h3>{{ name }} ({{ remote_id }})</h3>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">kanaal</th>
                <th scope="col">dag</th>
                <th scope="col">uren</th>
            </tr>
            </thead>
            <tbody>
            {{#each channels}}
                {{#each days as |day index|}}
                    <tr>
                        <td>{{ ../name }}</td>

                        <td>
                            {{index}}
                        </td>
                        <td>
                            {{#each day}}
                                <div>
                                    {{formatTime fromTime 'HH:mm'}} - {{formatTime toTime 'HH:mm'}}
                                </div>
                            {{/each}}
                        </td>
                    </tr>
                {{/each}}
            {{/each}}

            </tbody>
        </table>

    {{/each}}
    </div>
</div>