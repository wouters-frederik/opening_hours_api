{{> navbar}}
<div class="container">
  <div class="row">


    <table class="table">
      <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Channel</th>
          <th scope="col">created</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
    {{#each channels}}
      <tr>
        <th scope="row">{{ id }}</th>
        <td>{{ name }}</td>
          <td>{{#if created}}
              {{   formatTime created_Date 'dd/MM/yyyy' }}
          {{/if}}
              (by {{ user_name }})</td>
        <td><a href="javascript://" class="edit-channel" title="edit" data-channel-id="{{ id }}"  data-channel-name="{{ name }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
          <a href="javascript://" class="delete-channel" title="delete" data-channel-id="{{ id }}"><i class="fa fa-trash" aria-hidden="true"></i>
          </a>
        </td>
      </tr>
      {{/each}}

      </tbody>
    </table>
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createChannelModal">
          <i class="fa fa-plus" aria-hidden="true"></i> Add Channel
      </button>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="createChannelModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kanaal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="updateChannel" action="/ui/channels" method="post" data-create-url="/ui/channels" class="updateChannel">
            <div class="modal-body">

                    <input name="channelId" type="hidden" class="" id="channelId" value="">
                    <input name="channelcreatedBy" type="hidden" class="" id="channelCreatedBy" value="">
                    <input name="channelCreatedStamp" type="hidden" class="" id="channelCreatedTime" value="">
                    <div class="form-group">
                        <label for="channelName">Channel name</label>
                        <input name="channelName" type="text" value="" class="form-control" id="channelName" aria-describedby="channelNameHelp" placeholder="channel name here" autofocus required>
                        <small id="channelNameHelp" class="form-text text-muted">De naam vanhet kanaal (bv chat, mail, shedule a call,...)</small>
                    </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
            </form>
        </div>
    </div>
</div>